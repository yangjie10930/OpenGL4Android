<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <!--<SurfaceView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@+id/mSurface" />-->

    <TextureView
        android:id="@+id/mTexture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <com.joe.camera2recorddemo.View.WheelView.WheelView
        android:id="@+id/change_fliter"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/filterchoose_backgroud"
        app:dividerColor="#00ffffff"
        app:wheelDividerSize="0dp"
        app:wheelItemCount="2"
        app:wheelItemSize="45dp"
        app:wheelOrientation="horizontal"
        app:wheelTextColor="#ffffff"
        app:wheelTextColorCenter="#8EE5EE"
        app:wheelTextSize="14sp"/>

    <Button
        android:id="@+id/mTvStart"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/record_start"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:text="开始"
        android:textColor="#FFFFFF"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/mChange"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:background="@drawable/change_camera"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/mOne"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="30dp"
        android:background="@drawable/oneto"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"/>


</RelativeLayout>